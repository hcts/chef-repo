#
# Creates a customers@<domain>.local mailing list for each virtual host.
#
# Generated by Chef for <%= @node[:fqdn] %>
# DO NOT EDIT - Your changes will be overridden.
#
user     = <%= @username %>
password = <%= @password %>
dbname   = <%= @database %>
query    = SELECT accounts.local_email FROM accounts JOIN hosts ON accounts.host_id = hosts.id WHERE CONCAT('customers@', hosts.local_name)='%s'
