#
# Generated by Chef for <%= @node[:fqdn] %>
# DO NOT EDIT - Your changes will be overridden.
#
# Incoming mail
smtpd_tls_cert_file = /etc/ssl/certs/ssl-cert-snakeoil.pem
smtpd_tls_key_file = /etc/ssl/private/ssl-cert-snakeoil.key
smtpd_tls_security_level = may
smtpd_tls_session_cache_database = btree:${data_directory}/smtpd_scache

# Outgoing mail
relayhost = <%= @node[:postfix][:default_relayhost] %>
sender_dependent_relayhost_maps = mysql:/etc/postfix/relay_hosts.cf
smtp_sasl_auth_enable = yes
smtp_sasl_password_maps = mysql:/etc/postfix/smtp_passwords.cf<%= ', hash:/etc/postfix/default_smtp_passwords' unless @node[:postfix][:default_relayhost].empty? %>
smtp_sasl_security_options = noanonymous
smtp_sender_dependent_authentication = yes
smtp_tls_CApath = /etc/ssl/certs
smtp_tls_security_level = may
smtp_tls_session_cache_database = btree:${data_directory}/smtp_scache

smtpd_banner = $myhostname ESMTP $mail_name
biff = no
append_dot_mydomain = no
readme_directory = no
myhostname = <%= @node[:hostname] %>
alias_maps = hash:/etc/aliases
alias_database = hash:/etc/aliases
mydestination = <%= @node[:fqdn] %>, <%= @node[:hostname] %>, localhost.localdomain, localhost
mailbox_size_limit = 0
recipient_delimiter = +
inet_interfaces = all

# Virtual mailboxes
virtual_mailbox_domains = <%= @virtual_mailbox_domains.join(', ') %>
virtual_mailbox_base = <%= @node[:postfix][:virtual_mailbox_base] %>
virtual_mailbox_maps = mysql:/etc/postfix/virtual_mailboxes.cf
virtual_uid_maps = static:<%= Etc.getpwnam('nobody').uid %>
virtual_gid_maps = static:<%= Etc.getgrnam('nogroup').gid %>
virtual_alias_maps = mysql:/etc/postfix/virtual_aliases.cf