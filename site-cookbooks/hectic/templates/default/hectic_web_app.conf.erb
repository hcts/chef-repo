<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  ServerAlias <% @params[:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  DocumentRoot <%= @params[:docroot] %>

  RailsBaseURI /
  RailsEnv <%= @params[:rails_env] %>

  PassengerMaxPoolSize <%= @node[:rails][:max_pool_size] %>

  <Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all

    AuthType Basic
    AuthName "Hectic Account Management App"
    AuthPAM_Enabled on
    Require group admin

    # I wanted the above to be all that was necessary for PAM authentication,
    # but it wasn't. It turns out we need these workarounds, specified here:
    # http://blog.thirsch.de/2007/02/21/how-to-get-mod_auth_pam-running-on-apache-22x/
    AuthPAM_FallThrough off
    AuthBasicAuthoritative off
    AuthUserFile /dev/null
  </Directory>

  LogLevel info
  ErrorLog <%= @node[:apache][:log_dir] %>/<%= @params[:name] %>-error.log
  CustomLog <%= @node[:apache][:log_dir] %>/<%= @params[:name] %>-access.log combined

  RewriteEngine On
  RewriteLog <%= @node[:apache][:log_dir] %>/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0
  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
  RewriteRule ^.*$ /system/maintenance.html [L]
</VirtualHost>
