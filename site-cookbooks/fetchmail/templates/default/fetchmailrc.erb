set idfile "/var/lib/fetchmail/fetchids"
set pidfile "/var/run/fetchmail/fetchmail.pid"
set postmaster "postmaster"
set syslog

<% @accounts.each do |account| %>
poll <%= account['pop_server'] %> protocol pop3 timeout <%= @node[:fetchmail][:timeout] %> username "<%= account['email'] %>" password "<%= account['password'] %>" is "<%= account['local_email'] %>" ssl nokeep <%= "limit #{account['limit']} limitflush" unless account['limit'].to_i.zero? %> fetchall expunge 1
<% end %>
